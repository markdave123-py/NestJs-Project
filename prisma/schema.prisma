generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int        @id @unique @default(autoincrement())
  uuid        String     @unique
  firstname   String
  lastname    String
  username    String     @unique
  email       String     @unique
  password    String
  createdAt   DateTime   @default(now())
  isActive    Boolean
  isSuperUser Boolean
  isStaff     Boolean
  role        String?
  country     String?
  Refferal    Refferal[]
}

model Refferal {
  id            Int    @id @unique @default(autoincrement())
  user          User   @relation(fields: [userId], references: [id])
  userId        Int
  Refferal_Type String
  Reward        Int
}
